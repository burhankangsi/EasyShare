<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".filepicker.FileActivity"
    tools:ignore="ExtraText"
    android:background="@color/backgroundColor">

    <!-- <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/files_list"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/> -->
 <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


     <Button
         android:id="@+id/apps"
         android:layout_width="80dp"
         android:layout_height="wrap_content"
         android:layout_gravity="left"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="20dp"
         android:background="@color/purple_200"
         android:drawableTop="@drawable/apkicon"
         android:drawablePadding="10dp"
         android:text="Apps"
         android:textAppearance="@style/TextAppearance.Button"
         android:textColor="@color/black"
         android:textStyle="italic"
         app:backgroundTint="@color/purple_200"
         app:elevation="5dp" />

     <Button
         android:id="@+id/docs"
         android:layout_width="80dp"
         android:layout_height="wrap_content"
         android:layout_gravity="right"
         android:layout_marginTop="20dp"
         android:layout_marginRight="10dp"
         android:background="@color/purple_200"
         android:drawableTop="@drawable/fileicon"
         android:drawablePadding="50dp"
         android:text="Docs"
         android:textAppearance="@style/TextAppearance.Button"
         android:textColor="@color/black"
         android:textStyle="italic"
         app:backgroundTint="@color/purple_200"
         app:elevation="5dp" />

     <Button
         android:id="@+id/images"
         android:layout_width="80dp"
         android:layout_height="100dp"
         android:layout_gravity="left"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="150dp"
         android:background="@android:color/holo_purple"
         android:drawableTop="@drawable/imicon"
         android:drawablePadding="50dp"
         android:text="Images"
         android:textAppearance="@style/TextAppearance.Button"
         android:textColor="@color/black"
         android:textStyle="italic"
         app:backgroundTint="@color/purple_200"
         app:elevation="5dp" />

     <Button
         android:id="@+id/audios"
         android:layout_width="85dp"
         android:layout_height="wrap_content"
         android:layout_gravity="right"
         android:layout_marginTop="150dp"
         android:layout_marginRight="10dp"
         android:background="@android:color/holo_purple"
         android:drawableTop="@drawable/musicicon"
         android:drawablePadding="50dp"
         android:text="Audios"
         android:textAppearance="@style/TextAppearance.AppCompat.Body2"
         android:textColor="@color/black"
         android:textStyle="italic"
         app:backgroundTint="@color/purple_200"
         app:elevation="5dp" />

     <Button
         android:id="@+id/videos"
         android:layout_width="85dp"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="100dp"
         android:background="@android:color/holo_purple"
         android:drawableTop="@drawable/videoicon"
         android:drawablePadding="50dp"
         android:text="Videos"
         android:textAppearance="@style/TextAppearance.Button"
         android:textColor="@color/black"
         android:textStyle="italic"
         app:backgroundTint="@color/purple_200"
         app:elevation="5dp" />
 </FrameLayout>


    <TextView
        android:id="@+id/selected_files"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.805"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.711" />

    <EditText
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/edit_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_200"
        android:layout_weight="1.0"
        android:layout_marginBottom="120dp"
        android:enabled="false"
        android:hint="Add a note with the file...(optional)" />

    <Button
        android:id="@+id/send_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Send"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>